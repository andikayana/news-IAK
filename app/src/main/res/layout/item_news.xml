<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/ivNewsPhoto"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#85FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/padding_title"
                android:paddingRight="@dimen/padding_title"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andika Yana"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Published on "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPublishedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:text="09.00.00"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/padding_title"
            android:paddingRight="@dimen/padding_title"
            android:paddingTop="6dp"
            android:text="News Title goes here"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNewsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/padding_title"
                android:paddingRight="@dimen/padding_title"
                android:text="Detail Title here fddfbfgb bfbnfjbfdkb fbvkdfbvofdb djfbvfdiuvbuif dvbdsvkdbdfv fdvnbfdbnodfb fvnofivniofd fdvnfonvfov vndfovfnovnf fvnofviofni fvnfovnfi vfvnfo"
                android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="@dimen/padding_title"
            android:layout_marginLeft="@dimen/padding_title"/>

            <TextView
                android:id="@+id/tvReadMOre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="Read More..."
                android:textSize="15sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

